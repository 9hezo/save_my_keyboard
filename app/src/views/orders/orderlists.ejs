<script>
    $(document).ready(function() {
      $.ajax({
      type: "GET",
      url: '/orders/lists',
      async: false,
      success: function (response) {
                    console.log(response.data);
                    for (i = 0; i < response.data.length; i++) {
                        let temp_html = `<tr>
                                            <th>${response.data[i].kinds}</th>
                                            <th>${response.data[i].details}</th>
                                            <th>${response.data[i].pickup}</th>
                                            <th>${response.data[i].status}</th>
                                        </tr>`
                        $('#orderlists').append(temp_html)
                    }
                }
      })
    })
    
        
  </script>
  <body>
    <table>
        <thead>
            <tr>
                <th>종류</th>
                <th>요청사항</th>
                <th>날짜</th>
                <th>상태</th>
            </tr>
        </thead>
        <tbody id="orderlists"> </tbody>
    </table>
    
  </body>
